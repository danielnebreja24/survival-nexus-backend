// prisma/schema.prisma
datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

model Survivor {
  id           Int            @id @default(autoincrement())
  name         String
  age          Int
  gender       String
  lastLocation Json
  infected     Boolean        @default(false)
  inventory    SurvivorItem[]

  @@map("survivors")
}

model Item {
  id            Int            @id @default(autoincrement())
  name          String
  description   String?
  survivorItems SurvivorItem[]

  @@map("items")
}

model SurvivorItem {
  id         Int @id @default(autoincrement())
  survivorId Int
  itemId     Int
  quantity   Int

  survivor Survivor @relation(fields: [survivorId], references: [id])
  item     Item     @relation(fields: [itemId], references: [id])

  @@unique([survivorId, itemId])
  @@map("survivor_items")
}
